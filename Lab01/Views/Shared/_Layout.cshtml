<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <header>
        <img src="https://devmaster.edu.vn/images/logo.png" alt="Devmaster Academy" />
    </header>
    <nav style="background-color:#e1c9c9">
        @Html.ActionLink("Trang chủ","Index","Home",null,new {@class="navbar-brand"})
        @*<a href="/Home/Index" class="navbar-brand">Trang chủ</a>*@
        /
        @Html.ActionLink("Giới thiêu","About","Home", null,new {@class="navbar-brand"})
        <hr />
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Phòng chuyên môn Devmaster</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>